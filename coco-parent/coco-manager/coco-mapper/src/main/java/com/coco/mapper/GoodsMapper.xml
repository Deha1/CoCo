<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coco.mapper.GoodsMapper">

    <resultMap id="Goods" type="com.coco.pojo.Goods">
        <!-- 配置映射的用户信息 -->
        <id column="id" property="id"/>
        <result column="kind_id" property="kindId"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="shop_id" property="shopId"/>
        <result column="subtitle" property="subtitle"/>
        <result column="detail" property="detail"/>
        <result column="num" property="num"/>
        <result column="top_show" property="topShow"/>
        <result column="status" property="status"/>
        <!-- 配置映射的种类信息 -->
        <association property="goodsKind" javaType="com.coco.pojo.GoodsKind">
            <id column="id" property="id"/>
            <result column="name" property="name"/>
        </association>
        <!-- 配置映射的商铺信息 -->
        <association property="shop" javaType="com.coco.pojo.Shop">
            <id column="id" property="id"/>
            <result column="shop_name" property="shopName"/>
            <result column="shop_pic" property="shopPic"/>
            <result column="shop_dis" property="shopDis"/>
        </association>
        <!-- 配置映射的图片信息 -->
        <collection property="goodsPic" ofType="com.coco.pojo.GoodsPic">
            <id column="id" property="id"/>
            <result column="goods_id" property="goodsId"/>
            <result column="url" property="url"/>
        </collection>
    </resultMap>

    <select id="selectGoods" resultMap="Goods" parameterType="int">
        select co_goods.*,co_goods_kind.*,co_goods_pic.*,co_shop.*
        from co_goods,co_goods_kind,co_goods_pic,co_shop
        where co_goods.id=#{id} and co_goods.kind_id=co_goods_kind.id and co_goods_pic.goods_id=co_goods.id and co_goods.shop_id=co_shop.id;
    </select>
</mapper>